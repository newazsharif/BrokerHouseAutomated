@using Microsoft.AspNet.Identity
@using Escrow.Utility
@{
    Layout = null;
}
<h2>Edit User</h2>
<hr />
<div @*class="container"*@ ng-controller="EditUserController" ng-init="LoadInitial()">
    <form class="form-horizontal" ng-submit="" name="EditUserForm">
        <div class="form-group">
            <div class="col-md-2">
                <label>User Name</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="EditUser.UserName" readonly enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Email</label>
            </div>
            <div class="col-md-4">
                <input type="email" name="Email" class="form-control input-sm" data-ng-model="EditUser.Email" required  enter-as-tab />
                <p class="error" ng-show="RegistrationForm.Email.$error.email || submitted">Please Provide correct email address</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Phone Number</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="EditUser.PhoneNumber" required enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-3">
                <input type="checkbox" name="is_admin" ng-model="EditUser.is_admin" ng-true-value=1 ng-false-value=0 enter-as-tab /><label for="is_admin"> Is Admin</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" class="btn btn-default" value="Update User" data-ng-click="UpdateUser()" />
                <a href="/#UserList" class="btn btn-default">List</a>
            </div>
        </div>
    </form>
</div>
