@using Escrow.BOAS.Web
@{
    Layout = null;
    ViewBag.Title = "Reset Password";
}

<h2>@ViewBag.Title</h2>
<hr />
<div @*class="container"*@ ng-controller="ResetPasswordController"  ng-init="LoadInitial()">

    <form class="form-horizontal" ng-submit="" name="ResetPasswordForm">
        <input type="hidden"   value="@Html.RequestVerificationToken()" id="token">
        <div class="form-group">
            <div class="col-md-2">
                <label>User Name</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="ResetPassword.UserName" readonly enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>New Password</label>
            </div>
            <div class="col-md-10">
                <input type="password" name="Password" class="form-control input-sm" ng-model="ResetPassword.NewPassword" ng-minlength="6" required enter-as-tab />
                <p class="error" ng-show="ResetPasswordForm.Password.$error.minlength || submitted">Password must at least be 6 digits</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Confirm Password</label>
            </div>
            <div class="col-md-10">
                <input type="password" name="ConfirmPassword" class="form-control input-sm" ng-model="ResetPassword.ConfirmPassword" ng-minlength="6" required enter-as-tab ng-blur="CheckPassword()" />
                <p class="error" ng-show="ResetPasswordForm.ConfirmPassword.$error.mismatch || submitted">Password and confirm password does not match</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Reset Password" data-ng-click="ResetUserPassword()" />
                <a href="/#UserList" class="btn btn-default">User List</a>
            </div>
        </div>
    </form>
</div>

