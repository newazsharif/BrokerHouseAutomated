@using Microsoft.AspNet.Identity
@using Escrow.Utility

@{
    ViewBag.Title = "Instrument";
    Layout = null;
}

<h2>Instrument List</h2>
<hr />
<div class="row" ng-controller="InstrumentController" ng-init="loadInstrumentList()">
    <div class="col-md-12">
        <a href="/#NewInstrument" class="btn btn-default">&#10011; &nbsp;Add New</a><br /><br />
        <div class="row">
            <div class="form-group">
                <label class="col-md-2 control-label">Item by page</label>
                <div class="col-md-10">
                    <input type="text" min="1" class="form-control input-sm" ng-model="itemsByPage" numbers-only style="width : 150px" />
                </div>
            </div>
        </div>
        <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-striped">
            <thead>
                <tr>
                    <th st-sort="instrument_name">Instrument Name</th>
                    <th st-sort="isin">ISIN</th>
                    <th st-sort="security_code">Security Code</th>
                    <th st-sort="lot">LOT</th>
                    <th st-sort="face_value">Face Value</th>
                    <th st-sort="group">Group</th>
                    @*<th st-sort="status">Status</th>*@
                    <th>Edit</th>
                </tr>
                <tr>
                    <th colspan="7"><input st-search="" class="form-control input-sm" placeholder="global search ..." type="text" style="width : 200px" /></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="row in displayedCollection">
                    <td>{{row.instrument_name}}</td>
                    <td>{{row.isin}}</td>
                    <td>{{row.security_code}}</td>
                    <td>{{row.lot}}</td>
                    <td>{{row.face_value}}</td>
                    <td>{{row.group}}</td>
                    <td><a href="/#EditInstrument/{{row.id}}" class="btn btn-link">&#@Constant.Edit;</a></td>
                    @*<td><a ng-click="DeleteConstantObject(row)" class="btn btn-link">&#@Constant.Delete;</a></td>*@
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="text-center">
                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="" st-template="~/Scripts/Areas/pagination.custom.html"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

</div>


