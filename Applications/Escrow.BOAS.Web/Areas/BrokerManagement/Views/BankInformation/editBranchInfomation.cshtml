
@{
    ViewBag.Title = "editBranchInfomation";
    Layout = null;
}

<h2>Update Branch Infomation</h2>
<div class="row" ng-controller="BankInformationController" ng-init="LoadAllDropDown()">
    <form class="form-horizontal" ng-submit="" name="newBranchForm" ng-init="loadBranchById()">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Branch Name</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="branchInformation.branch_name" onload-focus="true" enter-as-tab required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label>Address</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="branchInformation.address" enter-as-tab />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Contact Person</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="branchInformation.contact_person" enter-as-tab />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Contact Number</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="branchInformation.contact_number" enter-as-tab />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Email</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="branchInformation.email_address" enter-as-tab />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Routing No</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="branchInformation.routing_no" enter-as-tab required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label for="Status">District</label>
                </div>
                <div class="col-md-8">
                    <select data-ng-model="branchInformation.district_id" class="dropdown form-control input-sm"
                            ng-options="Status.value as Status.text for Status in DistrictList" enter-as-tab required>
                        <option value="">---------------Select---------------</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label for="Status">Status</label>
                </div>
                <div class="col-md-8">
                    <select data-ng-model="branchInformation.active_status_id" class="dropdown form-control input-sm"
                            ng-options="Status.value as Status.text for Status in StatusList" enter-as-tab required>
                        <option value="">---------------Select---------------</option>
                    </select>
                </div>
            </div>
        </div>

       
            <div class="col-md-2">

            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-default" value="Update" data-ng-click="updateBranch(branchInformation.id)" />
                @*<input type="button" class="btn btn-default" value="Reset" data-ng-click="refresh()" />*@
                <a href="/#BankList" class="btn btn-default">Bank List</a>
            </div>
    </form>
</div>
@section Scripts {
}


