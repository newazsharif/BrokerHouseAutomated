@{
    ViewBag.Title = "Edit Bank Information";
    Layout = null;
    
}

<h2>Bank Information Update</h2>
<div class="row" ng-controller="BankInformationController" ng-init="LoadAllDropDown()">
    <form class=" form-horizontal" ng-submit="" name="newBankForm" ng-init="loadBankById()">
        <div class=" col-md-6">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Short Name</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="bankInformation.short_name" onload-focus="true" enter-as-tab required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label>Bank Name</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control input-sm" data-ng-model="bankInformation.bank_name" enter-as-tab required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label for="Status">Status</label>
                </div>
                <div class="col-md-8">
                    <select data-ng-model="bankInformation.active_status_id" class="dropdown form-control input-sm"
                            ng-options="Status.value as Status.text for Status in StatusList" enter-as-tab required>
                        <option value="">---------------Select---------------</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-2">

        </div>
        <div class="col-md-3">
            <input type="submit" class="btn btn-default" value="Update" data-ng-click="updateBank(bankInformation.id)" />
            @*<input type="button" class="btn btn-default" value="Reset" data-ng-click="refresh()" />*@
            <a href="/#BankList" class="btn btn-default">List</a>
        </div>
    </form>
</div>
@section Scripts {
}


