@using Microsoft.AspNet.Identity
@using Escrow.Utility

@{
    ViewBag.Title = "User Employee Mapping";
    Layout = null;
}

<h2>User Employee Mapping</h2>
<div @*class="container"*@ ng-controller="UserEmployeeMappingController" ng-init="loadDropdowns()">
    <form class="form-horizontal" ng-submit="" name="newUserEmpMapForm">
        <div class="form-group">
            <div class="col-md-2">
                <label>User ID</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="userEmpMap.user_id" class="dropdown form-control input-sm"
                        ng-options="user.value as user.text for user in userList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>

            <div class="col-md-2">
                <label>Employee</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="userEmpMap.employee_id" class="dropdown form-control input-sm"
                        ng-options="emp.value as emp.text for emp in employeeList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Active Status</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="userEmpMap.active_status_id" class="dropdown form-control input-sm"
                        ng-options="activeStatus.value as activeStatus.text for activeStatus in activeStatusList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-default" value="Save" data-ng-click="saveUserEmpMap()" />
                <input type="button" class="btn btn-default" value="Reset" data-ng-click="refresh()" />
                <a href="/#UserEmployeeMappingList" class="btn btn-default">List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
}

