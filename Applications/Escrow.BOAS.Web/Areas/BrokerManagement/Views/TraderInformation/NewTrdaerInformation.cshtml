@using Microsoft.AspNet.Identity
@using Escrow.Utility

@{
    ViewBag.Title = "Trdaer Information";
    Layout = null;
}

<h2>Trdaer Information</h2>
<div @*class="container"*@ ng-controller="TraderInformationController" ng-init="loadDropdowns()">
    <form class="form-horizontal" ng-submit="" name="newTraderForm">
        <div class="form-group">
            <div class="col-md-2">
                <label>Trader Code</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="tradaerInformation.trader_code" onload-focus="true" enter-as-tab required />
            </div>

            <div class="col-md-2">
                <label>Ar No</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="tradaerInformation.ar_no" enter-as-tab />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Employee</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="tradaerInformation.employee_id" class="dropdown form-control input-sm"
                        ng-options="emp.value as emp.text for emp in employeeList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>

            <div class="col-md-2">
                <label>License Renew Date</label>
            </div>
            <div class="col-md-4">
                <p class="input-group">
                    <input type="text" class="form-control input-sm" datepicker-popup="dd/MM/yyyy" ng-readonly="true" data-ng-model="tradaerInformation.license_renew_date" is-open="opened1" min-date="minDate" max-date="'31/12/9999'" show-weeks="false" show-button-bar="false" enter-as-tab />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="open($event,'opened1')"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Trade Work Station</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="tradaerInformation.trade_work_station" enter-as-tab />
            </div>

            <div class="col-md-2">
                <label>Active Status</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="tradaerInformation.active_status_id" class="dropdown form-control input-sm"
                        ng-options="activeStatus.value as activeStatus.text for activeStatus in activeStatusList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
        </div>

        @* --------------------- from here added by shohid--------------- *@

        <div class="form-group">
            <div class="col-md-2">
                <label>Broker Branch</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="tradaerInformation.branch_id" class="dropdown form-control input-sm"
                        ng-options="branch.value as branch.text for branch in branchList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Investor Range</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="tradaerInformation.investor_range" enter-as-tab />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                
            </div>
            <div class="col-md-4">
                <input type="checkbox" name="isDefault" data-ng-model="tradaerInformation.Is_Default" ng-true-value=1 ng-false-value=0 enter-as-tab /><label for="isDefault">&nbsp; Default</label>
            </div>
        </div>


        @* ----------------end here------------ *@



        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-default" value="Save" data-ng-click="saveNewTrader()" />
                <input type="button" class="btn btn-default" value="Reset" data-ng-click="refresh()" />
                <a href="/#TraderInformationList" class="btn btn-default">List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
}

