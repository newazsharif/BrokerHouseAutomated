
@{
    Layout = null;
}
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<h2>Day End Process</h2>
<hr />
<div @*class="container"*@ ng-controller="DayProcessController" ng-init="initialLoad()">
    <form class="form-horizontal" ng-submit="" name="DayProcessForm">
        <div class="form-group">
            <div class="col-md-2">
                <label>Process Date</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" datepicker-popup="dd/MM/yyyy" ng-readonly="true" data-ng-model="dayProcess.trd_dt" is-open="opened1" min-date="minDate" max-date="'31/12/9999'" show-weeks="false" show-button-bar="false" enter-as-tab enter-as-tab />
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-md-offset-2">
                <img class="loader" src="~/Content/images/ajax-loader.gif" hidden />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-2">
                <input type="submit" class="btn btn-default" value="Process" data-ng-click="ExecuteDayEnd()" />
            </div>
        </div>
    </form>
</div>
