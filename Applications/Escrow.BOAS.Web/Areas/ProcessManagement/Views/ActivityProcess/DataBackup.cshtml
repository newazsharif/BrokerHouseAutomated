
@{
    Layout = null;
}
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<h2>Database Backup Process</h2>
<hr />
<div @*class="container"*@ ng-controller="ActivityProcessController" ng-init="initialLoad()">
    <form class="form-horizontal" ng-submit="" name="BackUpProcessForm">
        <div class="form-group">
            <div class="col-md-2">
                <label>File Location</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" ng-readonly="true" data-ng-model="bkProcess.path"   enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>File Name</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="bkProcess.name" enter-as-tab required/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-md-offset-2">
                <img class="loader" src="~/Content/images/ajax-loader.gif" hidden />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-2">
                <input type="submit" class="btn btn-default" value="Backup" data-ng-click="ExecuteBackup()" />
            </div>
        </div>
    </form>
</div>
