@using Escrow.Utility

@{
    Layout = null;
}

<h2>Module List</h2>
<hr/>
<div class="row" ng-controller="ModuleController" ng-init="GetAllModule()">
    <div class="col-md-12">
        <a href="/#NewModule" class="btn btn-default">&#10011; &nbsp;Add New</a><br /><br />
        <div class="row">
            <div class="form-group">
                <label class="col-md-2 control-label">Item by page</label>
                <div class="col-md-10">
                    <input type="text" min="1" class="form-control input-sm" ng-model="itemsByPage" numbers-only style="width: 150px"/>
                </div>
            </div>
        </div>
        <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-striped">
            <thead>
            <tr>
                <th st-sort="name">Module Name</th>
                <th st-sort="id_name">Module Id</th>
                <th st-sort="sort_id">Sorting Order</th>
                <th>Edit</th>
            </tr>
            <tr>
                <th colspan="7"><input st-search="" class="form-control input-sm" placeholder="global search ..." type="text" style="width: 200px"/></th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="row in displayedCollection">
                <td>{{row.name}}</td>
                <td>{{row.id_name}}</td>
                <td>{{row.sort_id}}</td>
                <td><a href="/#EditModule/{{row.id}}" class="btn btn-link">&#@Constant.Edit;</a></td>
                @*<td><a ng-click="DeleteConstantObject(row)" class="btn btn-link">&#@Constant.Delete;</a></td>*@
                @*<td><a href="/#ResetPassword/{{row.Id}}">&#@Constant.ResetFirstHalf;&#@Constant.ResetSecondHalf;</a></td>*@
            </tr>
            </tbody>
            <tfoot>
            <tr>
                <td colspan="7" class="text-center">
                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="" st-template="~/Scripts/Areas/pagination.custom.html"></div>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
</div>
