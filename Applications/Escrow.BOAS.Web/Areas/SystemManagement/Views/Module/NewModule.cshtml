
@{
    Layout = null;
}
<h2>Add New Module</h2>
<hr/>

<div @*class="container"*@ ng-controller="ModuleController" ng-init="loadNewModule()">
    <form class="form-horizontal" name="AddModuleform">
        <div class="form-group">
            <div class="col-md-2">
                <label>Module Name</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="module.name" onload-focus="true" required enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Module Id</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="module.id_name" required enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Sort Order</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="module.sort_id" numbers-only enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save" data-ng-click="AddNewModule()" />
                <input type="button" class="btn btn-default" value="Reset" data-ng-click="loadNewModule()" />
                <a href="/#ModuleList" class="btn btn-default">List</a>
            </div>
        </div>
    </form>
</div>
