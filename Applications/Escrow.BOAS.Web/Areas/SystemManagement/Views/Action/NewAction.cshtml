
@{
    Layout = null;
}
<h2> Add New Action</h2>
<hr/>
<div @*class="container"*@ ng-controller="ActionController" ng-init="GetDdlModule()">
    <form name="AddNewActionForm" class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">
                <label>
                    Action Name
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="action.name" name="name" required onload-focus="true" enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>
                    URL
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="action.url" name="name"  enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>
                    Display Name
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="action.display_name" name="display_name" enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>
                    Class Name
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control input-sm" data-ng-model="action.class_name" name="class_name" required enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Module</label>
            </div>

            <div class="col-md-4">
                <select data-ng-model="action.ui_module_id" class="dropdown form-control input-sm"
                        ng-options="Module.value as Module.text for Module in ModuleList" enter-as-tab required ng-change="GetDdlController(action.ui_module_id)">
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Controller</label>
            </div>

            <div class="col-md-4">
                <select data-ng-model="action.controller_id" class="dropdown form-control input-sm"
                        ng-options="Controller.value as Controller.text for Controller in ControllerList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <input type="checkbox" name="is_view" ng-model="action.is_view" ng-true-value=1 ng-false-value=0 enter-as-tab /><label for="is_view"> Is View</label>
            </div>

            <div class="col-md-2">
                <input type="checkbox" name="is_in_menu" ng-model="action.is_in_menu" ng-true-value=1 ng-false-value=0 enter-as-tab /><label for="is_in_menu"> Is Menu</label>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save" data-ng-click="AddNewAction()" />
                <input type="button" class="btn btn-default" value="Reset" data-ng-click="LoadNewAction()" />
                <a href="/#ActionList" class="btn btn-default">List</a>
            </div>
        </div>
    </form>
</div>