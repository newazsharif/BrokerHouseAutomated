@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Edit Constant Object Value";
    Layout = null;
}

<h2>Edit Constant Object Value</h2>
<hr />
<div @*class="container"*@ ng-app="" ng-controller="ConstantObjectValueController">
    <form class="form-horizontal" ng-init="loadConstantObjectAndValue()" ng-submit="" name="editConsValForm">
        <input type="hidden" name="objectValueId" data-ng-model="editConsObjVal.object_value_id" />
        <div class="form-group">
            <div class="col-md-2">
                <label>Object</label>
            </div>
            <div class="col-md-4">
                <select data-ng-model="editConsObjVal.object_id" class="dropdown form-control input-sm"
                        ng-options="constantObject.value as constantObject.text for constantObject in constantObjectList" ng-change="getDefaultValue(editConsObjVal.object_id)" onload-focus="true" enter-as-tab required></select>
            </div>

            <div class="col-md-6">
                <label class="col-md-4 control-label" ng-style="customStyle.style">{{default_value}}</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Value</label>
            </div>
            <div class="col-md-7">
                <input type="text" name="objectValue" class="form-control input-sm" data-ng-model="editConsObjVal.display_value" enter-as-tab required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Sort Order</label>
            </div>
            <div class="col-md-7">
                <input type="number" name="sortingOrder" class="form-control input-sm" data-ng-model="editConsObjVal.sorting_order" enter-as-tab />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label>Remarks</label>
            </div>
            <div class="col-md-7">
                <textarea name="remarks" class="form-control input-sm" data-ng-model="editConsObjVal.remarks" enter-as-tab></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="checkbox" name="isDefault" data-ng-model="editConsObjVal.is_default" ng-true-value=1 ng-false-value=0 enter-as-tab /><label for="isDefault"> Default</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save" data-ng-click="editConstantObjectValue()" />
                <input type="button" class="btn btn-default" value="Reset" data-ng-click="loadConstantObjectAndValue()" />
                <a href="/#ConstantObjectValue" class="btn btn-default">List</a>
            </div>
        </div>
    </form>

</div>
@section Scripts {
}

