@using Microsoft.AspNet.Identity
@using Escrow.Utility

@{
    ViewBag.Title = "Order Placed";
    Layout = null;
}

<h2>Order Placed and Canceled</h2>
<div class="row" ng-controller="OrderPlacedController" ng-init="loadOrderPlacedList()">
    <div class="col-md-12">
        <div class="row">
            <div class="form-group">
                <label class="col-md-2 control-label">Item by page</label>
                <div class="col-md-10">
                    <input type="text" class="form-control input-sm" ng-model="itemsByPage" positive-numbers-only />
                </div>
            </div>
        </div>
        <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-striped">
            <thead>
                <tr>

                    <th st-sort="client_id">Investor Code</th>
                    <th st-sort="first_holder_name">Name</th>
                    <th st-sort="security_code">Instrument</th>
                    <th st-sort="order_type">Buy/Sell</th>
                    <th st-sort="quantity">Qty</th>
                    <th st-sort="market_price">Market Price</th>
                    <th st-sort="negotiable">Negotiable</th>
                    <th st-sort="Status">Status</th>                    
                    <th st-sort="order_date">Order Date</th>
                    <th st-sort="approve_date">Placed Date</th>
                </tr>
                <tr>
                    <th colspan="10"><input st-search="" class="form-control input-sm" placeholder="global search ..." type="text" /></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="row in displayedCollection">

                    <td>{{ row.client_id }}</td>
                    <td>{{ row.first_holder_name }}</td>
                    <td>{{ row.security_code }}</td>
                    <td>{{ row.order_type }}</td>
                    <td>{{ row.quantity }}</td>
                    <td>{{ row.market_price }}</td>
                    <td>{{ row.negotiable }}</td>
                    <td>{{ row.Status }}</td>
                    <td>{{ row.order_date }}</td>
                    <td>{{ row.approve_date }}</td>
                </tr>
            <tbody>
            <tfoot>
                <tr>
                    <td colspan="10" class="text-center">
                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="" st-template="~/Scripts/Areas/pagination.custom.html"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
@section Scripts {
}

