<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<div class="form-group">
    <div class="col-md-4">
        <label for="from_date">From Date</label>
    </div>
    <div class="col-md-7">
        <input type="text" class="form-control input-sm" datepicker-popup="dd/MM/yyyy" ng-readonly="true" data-ng-model="nonTradingDayMaster.frm_dt" is-open="opened1" min-date="minDate" max-date="'31/12/9999'" show-weeks="false" show-button-bar="false" enter-as-tab  />
    </div>
    <div class="col-md-1">
        <span class="input-group-btn">
            <button style="margin-left : -19px" type="button" class="btn btn-default" ng-click="open($event,'opened1')"><i class="glyphicon glyphicon-calendar"></i></button>
        </span>
    </div>
</div>
<div class="form-group">
    <div class="col-md-4">
        <label for="to_date">To Date</label>
    </div>
    <div class="col-md-7">
        <input type="text" class="form-control input-sm" datepicker-popup="dd/MM/yyyy" ng-readonly="true" data-ng-model="nonTradingDayMaster.to_dt" is-open="opened2" min-date="minDate" max-date="'31/12/9999'" show-weeks="false" show-button-bar="false" enter-as-tab  />
    </div>
    <div class="col-md-1">
        <span class="input-group-btn">
            <button style="margin-left : -19px" type="button" class="btn btn-default" ng-click="open($event,'opened2')"><i class="glyphicon glyphicon-calendar"></i></button>
        </span>
    </div>
</div>
