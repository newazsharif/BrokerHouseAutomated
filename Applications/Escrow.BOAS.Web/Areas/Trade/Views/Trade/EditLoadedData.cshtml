@using Microsoft.AspNet.Identity
@using Escrow.Utility
@{
    Layout = null;
}




<h2>Trade Data</h2>
<hr />
<div class="row" ng-controller="TradeFileController" ng-init="LoadTradeList()">
    <div class="col-md-12">
        
        <div class="row">
            <div class="form-group">
                <a href="/#CreateTradeFile" class="btn btn-default" style="margin-left:20px;">Back to Trade</a>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Item by page</label>
                <div class="col-md-10">
                    <input type="text" min="1" class="form-control input-sm" ng-model="itemsByPage" numbers-only style="width : 150px" />
                </div>
            </div>
        </div>
        <table st-table="displayedCollection" st-safe-src="TradeList" class="table table-striped">
            <thead>
                <tr>

                    <th st-sort="ClientCode">Client Code</th>                    
                    <th st-sort="SecurityCode">Company Code</th>
                    <th st-sort="OrderId">Order Id</th>
                    <th st-sort="Quantity">Quantity</th>
                    <th st-sort="Price">Rate</th>
                    <th st-sort="Comission">Comission</th>
                    @*<th st-sort="status">Status</th>*@
                    @*<th>Edit</th>*@
                </tr>
                <tr>
                    <th colspan="7"><input st-search="" class="form-control input-sm" placeholder="global search ..." type="text" style="width : 200px" /></th>
                </tr>
            </thead>
            <tbody>
                
                <tr ng-repeat="row in displayedCollection">
                    
                    <td><input type="text" data-ng-model="row.ClientCode" class="form-control input-sm" ng-blur="UpdateInvestorTrade(row.Id,row.ClientCode)" style="width:200px;" /></td>
                    <td>{{row.SecurityCode}}</td>
                    <td>{{row.OrderId}}</td>
                    <td>{{row.Quantity}}</td>
                    <td>{{row.Price}}</td>
                    <td>{{row.Comission}}</td>
                    @*<td><a href="/#EditInstrument/{{row.id}}" class="btn btn-link">&#@Constant.Edit;</a></td>*@
                    @*<td><a ng-click="DeleteConstantObject(row)" class="btn btn-link">&#@Constant.Delete;</a></td>*@
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="text-center">
                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="" st-template="~/Scripts/Areas/pagination.custom.html"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

</div>
