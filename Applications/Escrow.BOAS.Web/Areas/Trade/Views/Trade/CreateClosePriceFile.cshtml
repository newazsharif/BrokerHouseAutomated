
@{
    Layout = null;
}

<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<h2>Close Price File</h2>
<hr />
<div @*class="container"*@ ng-controller="PriceFileController" ng-init="initialLoad()">
    <form class="form-horizontal" ng-submit="" name="PriceFileForm">
        <div class="form-group">
            <div class ="col-md-2">
                <label>Stock Exchange</label>
            </div>
            <div class="col-md-10">
                <select data-ng-model="closePrice.stock_Exchange" class="dropdown form-control input-sm"
                        ng-options="Stock.value as Stock.text for Stock in StockList" enter-as-tab required>
                    <option value="">---------------Select---------------</option>
                </select>
            </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label>Trading Date</label>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control input-sm" datepicker-popup="dd/MM/yyyy" ng-readonly="true" data-ng-model="closePrice.trd_dt" is-open="opened1" min-date="minDate" max-date="'31/12/9999'" show-weeks="false" show-button-bar="false" enter-as-tab enter-as-tab />
                </div>
                
            </div>
        <div class="form-group" style="margin-left: 60px;">
            <div class="col-md-5">
                <input class="btn btn-primary" type="file" ngf-select ng-model="file" id="FileUpload" name="FileUpload" style="margin-left: 88px" />
             </div>
            <div class="col-md-7">
                <input type="submit" class="btn btn-default" value="Upload" data-ng-click="UploadPriceFile(file)" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-md-offset-2">
                <img class="loader" src="~/Content/images/ajax-loader.gif" hidden />
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-2 col-md-offset-2">
                    <input type="submit" class="btn btn-default" value="Execute" data-ng-click="ExecuteClosePrice()"/>
                </div>
            </div>
</form>
</div>